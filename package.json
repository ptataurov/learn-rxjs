{
  "name": "project-name",
  "version": "1.0.0",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "yarn dev",
    "dev": "yarn webpack-dev-server --config config/webpack.config.js --env.IS_DEV --env.SCRIPT_NAME=dev",
    "build": "rm -rf ./dist && webpack --config config/webpack.config.js -p --env.SCRIPT_NAME=build ",
    "cr:c": "node config/scripts/create-component.js",
    "cr:p": "node config/scripts/create-page.js",
    "u": "node config/scripts/update-imports.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "globals": {
      "$": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "*",
          "next": "return"
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-var": "error"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-rational-order"
    ],
    "rules": {
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "declaration-empty-line-before": "never"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.4.1",
    "echarts": "^4.3.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "normalize.css": "^8.0.1",
    "rxjs": "^6.5.4",
    "swiper": "^5.3.0",
    "xterm": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.5",
    "cache-loader": "^4.1.0",
    "copy-webpack-plugin": "^5.0.5",
    "css-loader": "^2.1.0",
    "eslint": "^6.5.1",
    "file-loader": "^3.0.1",
    "hasha": "^5.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.5.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^2.0.1",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^2.0.0",
    "stylelint-webpack-plugin": "^1.2.3",
    "terser-webpack-plugin": "^1.4.1",
    "thread-loader": "^2.1.3",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  }
}
